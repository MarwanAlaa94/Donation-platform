<p id="notice"><%= notice %></p>

<h1>Needs</h1>
  <div class="container">
    <div class="row">

<% @needs.each do |need| %>

      <div class="col-sm-4">
        <%= link_to organization_need_path(params[:organization_id],need) do %>
        <div class="panel panel-primary">
            <div class="panel-heading" style="align-text:center;"><%=need.title%></div>
              <div class="panel-body img-responsive" style="width:100% ;  height: 250px" >
                <% if need.need_images.present? %>
                    <%= image_tag  need.need_images[0].photo.url(:medium) ,
                    :class =>"img-responsive img-rounded fancybox" ,:style => "width:100%; height: 150px ;" %>
                    <%else%>
                    <%= image_tag("emptyImage.png", :alt => "Empty image",
                     :class =>"img-responsive img-rounded" ,:style => "width:100% ; height: 120px ; ") %>
                <%end%>
                <br>
                <div style="text-align:center">
                  <%if need.description.length < 100%>
                  <%=need.description%>
                  <%else%>
                    <%=need.description[0..100]+ '...'%>
                  <%end%>

                </div>

          </div>
        </div>
        <%end%>
      </div>

<% end %>
</div>
</div>
<p><%= link_to 'back',organization_path(params[:organization_id]) %></p>

<br>
