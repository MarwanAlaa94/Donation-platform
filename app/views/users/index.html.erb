<p id="notice"><%= notice %></p>

<h1>Donors</h1>
<div  style="font-size:20px;">

<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th >User Name</th>
      <th>Email</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if !user.isAdmin %>
      <tr>
        <td><%= truncate(user.user_name, :length => 100)  %></td>
        <td><%= truncate(user.email, :length => 100) %></td>

        <td><%= link_to 'Show', user %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
<br>
