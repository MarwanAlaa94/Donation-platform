<p id="notice"><%= notice %></p>

<p>
  <strong>User name:</strong>
  <%= @user.user_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.password %>
</p>
<% if @user.avatar? %>
	<p>
		<strong>Image:</strong><br />
	  	<%= image_tag @user.avatar.url() %>
	</p>
<% end %>

<div class="row">
  <div class="col-md-4"><%= button_to 'Edit Profile', edit_user_path(@user), method: :get, class: "btn btn-primary btn-block btn-responsive" %></div>

</div>

