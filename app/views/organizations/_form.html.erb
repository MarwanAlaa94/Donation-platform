<%= form_for organization , html: { multipart: true } do |f| %>
  <% if organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
      <% organization.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <%= f.label :org_name, "Organization Name: *" %>
    <%= f.text_field :org_name , :autocomplete => 'off',class: 'form-control'  %>



    <%= f.label :email , "organization Email: *"%>
    <%= f.email_field :email , :autocomplete => 'off',class: 'form-control' %>



      <%= f.label :password, "Password: *" %>
        <%= f.password_field :password , :autocomplete => 'off',class: 'form-control' %>



      <%= f.label :password_confirmation, "Password Confirmation: *" %>
        <%= f.password_field :password_confirmation , :autocomplete => 'off',class: 'form-control'%>



    <%= f.label :info, "Information about organization: *" %>
    <%= f.text_area :info , :autocomplete => 'off',class: 'form-control'%>



    <%= f.label :website_URL, "Website Url (if exists):" %>
    <%= f.text_field :website_URL , :autocomplete => 'off',class: 'form-control' %>



    <%= f.label :contacts, "Contacts: *" %>
    <%= f.text_field :contacts , :autocomplete => 'off',class: 'form-control' %>



    <%= f.label :logo_url, "Logo Url (if exists):" %>
    <%= f.text_field :logo_url,class: 'form-control' %>



    <%=f.label "Profile Image:"%><br>
    <%=f.file_field :image ,class: 'form-control'%>

    </div>
    </div>
   <%#= f.check_box :terms_of_service  %>

  <div class="submit" >
    <%= f.submit "Done", class: "btn btn-primary" %>
  </div>

<% end %>
